<div class="mt-4 p-6 border-2 border-terminal-border bg-terminal-input rounded-lg shadow-sm">
  <%= form_with model: [post, comment], local: true,
    data: {
      controller: "markdown-editor",
      "markdown-editor-images-allowed-value": true,
      "markdown-editor-editor-height-value": 180,
    },
    class: "grid grid-cols-1 md:grid-cols-2 gap-4" do |f| %>

  <div>
    <%= f.text_area :content,
          class: "w-full bg-terminal-input border border-terminal-border text-terminal-text rounded-lg",
          data: { "markdown-editor-target": "editor" } %>
  </div>

  <div class="min-h-[200px] max-h-200 overflow-y-auto prose prose-invert max-w-none border border-terminal-border rounded-lg bg-terminal-input p-4"
        data-markdown-editor-target="preview"></div>

  <% if defined?(parent_comment) && parent_comment.present? %>
    <%= f.hidden_field :parent_id, value: parent_comment.id %>
  <% end %>

  <div class="md:col-span-2 mt-2 text-right">
    <%= f.submit "投稿する", class: "btn-terminal-accent" %>
  </div>
<% end %>
</div>